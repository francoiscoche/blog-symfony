{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}




<div class="container mx-auto">
    <h1 class="text-5xl text-center mt-24 mb-8">Blog</h1>
    <div class="flex flex-row flex-wrap mt-8 justify-evenly">
        {% for post in posts %}
            {% include "components/_card.html.twig" %}
        {% endfor %}
    </div>
    <div class="navigation flex justify-center mb-8">
        {{ knp_pagination_render(posts) }}
    </div>
</div>
{% endblock %}
