{% if badges %}
    <div class="flex justify-start my-2 flex-wrap">
        {% for badge in badges %}
            <span class="text-xs inline-block mr-2 mb-2 py-1 px-2.5 leading-none text-center whitespace-nowwrap align-baseline font-bold bg-blue-600 text-white rounded-full">
                <a href="{{ path("category.index", {slug: badge.slug}) }}">{{ badge.name }}</a>
            </span>
        {% endfor %}
    </div>
{% endif %}